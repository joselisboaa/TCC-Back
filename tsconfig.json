{
  "compilerOptions": {
    "target": "es2022", // Define a versão do ECMAScript
    "module": "commonjs", // Usa CommonJS para compatibilidade com Node.js
    "rootDir": "./src", // Define a raiz do projeto
    "outDir": "./dist", // Gera arquivos JavaScript na raiz
    "strict": true, // Habilita todas as verificações de tipo estritas
    "esModuleInterop": true, // Permite a importação de módulos CommonJS
    "skipLibCheck": false, // Verifica tipos em arquivos de declaração
    "forceConsistentCasingInFileNames": true, // Garante consistência no casing de arquivos
    "noImplicitAny": false, // Impede tipos implícitos 'any'
    "allowJs": false // Desabilita a compilação de arquivos JavaScript
  },
  "include": ["**/*.ts"], // Inclui todos os arquivos TypeScript
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}